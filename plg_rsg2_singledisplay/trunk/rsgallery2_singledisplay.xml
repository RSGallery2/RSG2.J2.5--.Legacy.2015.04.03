<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content" method="upgrade">
	<name>RSGallery2 Single Image Display</name>
	<author>Jonathan DeLaigle, Radek Kafka, Mirjam Kaizer</author>
	<creationDate>15 May 2011</creationDate>
	<copyright>(C) 2007 Jonathan DeLaigle. 2010 Radek Kafka. 2011 RSGallery2 Team. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorUrl>www.rsgallery2.nl</authorUrl>
	<version>2.1</version>
	<description>RSGallery2 Single Display plugin</description>
	<files>
		<filename plugin="rsgallery2_singledisplay">rsgallery2_singledisplay.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_content_rsgallery2_singledisplay.ini</language>
	</languages>
	<params>
		<param name="popup_style" type="list" default="normal_popup" label="POPUP_STYLE" description="POPUP_STYLE_DESCRIPTION">
			<option value="no_popup">No popup</option>
			<option value="use_link">Use Link and Link Text</option>
			<option value="normal_popup">Normal popup</option>
			<option value="highslide">Highslide</option>
		</param>
	</params>
</install>