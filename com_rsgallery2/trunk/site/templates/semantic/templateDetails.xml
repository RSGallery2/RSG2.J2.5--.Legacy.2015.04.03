<?xml version="1.0" encoding="iso-8859-1"?>
<mosinstall type="rsgTemplate">
	<name>Semantic - Default display template</name>
	<creationDate>15/02/07</creationDate>
	<author>rsgallery2.net</author>
	<copyright>Open Source, GPL</copyright>
	<authorEmail>info@rsgallery2.net</authorEmail>
	<authorUrl>rsgallery2.net</authorUrl>
	<version>2.0</version>
	<description>This is the default semantic HTML template.  Currently unfinished.</description>
	<files>
		<filename>index.php</filename>
		<filename>display.class.php</filename>
		<filename>templateDetails.xml</filename>
	</files>
	<css>
		<filename>css/template.css</filename>
	</css>
  <params>
    <param name="displayDescription" type="radio" default="1" label="Display description" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>
    <param name="displayHits" type="radio" default="1" label="Display hits" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>

    <param name="displayVoting" type="radio" default="1" label="Display voting" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>
    
    <param name="displayComments" type="radio" default="1" label="Display comments" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>

    <param name="displayEXIF" type="radio" default="1" label="Display EXIF data" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>

    <param name="displayPopup" type="list" default="0" label="Popup style" description="">
      <option value="0">No popup</option>
      <option value="1">Normal popup</option>
      <option value="2">Fancy popup (Errors in IE6!)</option>
    </param>

    <param name="watermark" type="radio" default="1" label="Display watermark" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>


    <param name="display_thumbs_style" type="list" default="float" label="Thumbnail style" description="">
      <option value="table">Table</option>
      <option value="float">Float</option>
    </param>

    <param name="display_thumbs_floatDirection" type="list" default="float" label="Direction (only for float)" description="">
      <option value="left">Left</option>
      <option value="right">Right</option>
    </param>

    <param name="display_thumbs_colsPerPage" type="text" default="3" label="Number of thumbnail columns (only for table)" description="" size="10" />


    <param name="display_thumbs_maxPerPage" type="text" default="9" label="Thumbnails per page" description="" size="10" />

    <param name="displaySlideshow" type="radio" default="1" label="Display Slideshow" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>

    <param name="showGalleryOwner" type="radio" default="1" label="Display Owner Information" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>

    <param name="showGallerySize" type="radio" default="1" label="Display number of items in gallery" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>

    <param name="showGalleryDate" type="radio" default="1" label="Display creation date" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>

    <param name="galcountNrs" type="text" default="10" label="Default number of galleries on frontpage" description="" size="10" />

    <param name="displayRandom" type="radio" default="1" label="Display random" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>

    <param name="displayLatest" type="radio" default="1" label="Display latest" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>

    <param name="show_mygalleries" type="radio" default="1" label="Show My Galleries" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>

    <param name="display_thumbs_showImgName" type="radio" default="1" label="Show image name below thumbnail" description="">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </param>




  </params>
  </mosinstall>
